<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jobsinputbg"
    android:orientation="vertical"
    tools:context=".fragments.jobsinfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/jobsinputbg">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_jobTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/jobtitle"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/light_blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.055"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_jobTitle"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/Job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"

                        android:text="Job ID: "
                        app:layout_constraintStart_toStartOf="@+id/textView_jobTitle"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/tv_jobID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JobID"
                        app:layout_constraintStart_toEndOf="@+id/Job"
                        app:layout_constraintTop_toTopOf="@+id/Job" />

                    <TextView
                        android:id="@+id/Scope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Scope: "
                        app:layout_constraintStart_toStartOf="@+id/Job"
                        app:layout_constraintTop_toBottomOf="@+id/Job" />

                    <TextView
                        android:id="@+id/tv_scope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Scope_of_work"
                        app:layout_constraintStart_toEndOf="@+id/Scope"
                        app:layout_constraintTop_toTopOf="@+id/Scope" />

                    <TextView
                        android:id="@+id/Areaunit"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Area: "
                        app:layout_constraintStart_toStartOf="@+id/Scope"
                        app:layout_constraintTop_toBottomOf="@+id/Scope" />

                    <TextView
                        android:id="@+id/tv_Area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area"
                        app:layout_constraintStart_toEndOf="@+id/Areaunit"
                        app:layout_constraintTop_toTopOf="@+id/Areaunit" />


                    <TextView
                        android:id="@+id/Loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:text="Location: "
                        app:layout_constraintStart_toStartOf="@+id/Areaunit"
                        app:layout_constraintTop_toBottomOf="@+id/Areaunit" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"

                        app:layout_constraintStart_toEndOf="@+id/Loc"
                        app:layout_constraintTop_toTopOf="@+id/Loc" />

                    <TextView
                        android:id="@+id/startD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Date: "

                        app:layout_constraintStart_toStartOf="@+id/Loc"
                        app:layout_constraintTop_toBottomOf="@+id/Loc" />

                    <TextView
                        android:id="@+id/tv_startingdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date"
                        app:layout_constraintStart_toEndOf="@+id/startD"
                        app:layout_constraintTop_toTopOf="@+id/startD" />

                    <TextView
                        android:id="@+id/exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="Expected Date of Finish: "
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/startD"
                        app:layout_constraintTop_toBottomOf="@+id/startD" />

                    <TextView
                        android:id="@+id/tv_expecteddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/Expectedfinishdate"
                        app:layout_constraintBottom_toBottomOf="@+id/exp"
                        app:layout_constraintStart_toEndOf="@+id/exp"
                        app:layout_constraintTop_toTopOf="@+id/exp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Job Workers"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/light_blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.055"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TIL_forcasted"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="32dp"
                        android:hint="Recommended Number of workers"
                        android:textColorHint="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextinputET_forcasted"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of : "
                        app:layout_constraintBottom_toBottomOf="@+id/TIL_skilled"
                        app:layout_constraintStart_toStartOf="@+id/TIL_forcasted"
                        app:layout_constraintTop_toTopOf="@+id/TIL_skilled" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp"
                        android:text="*note to user the value above is the optimal number of workers for the job."
                        app:layout_constraintEnd_toEndOf="@+id/TIL_forcasted"

                        app:layout_constraintStart_toStartOf="@+id/TIL_forcasted"
                        app:layout_constraintTop_toBottomOf="@+id/TIL_forcasted" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TIL_skilled"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="32dp"
                        android:hint="Skilled Worker"
                        android:textColorHint="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/TIL_forcasted">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextinputET_skilled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="0123456789"
                            android:ellipsize="end"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of : "
                        app:layout_constraintBottom_toBottomOf="@+id/TIL_unskilled"
                        app:layout_constraintStart_toStartOf="@+id/TIL_forcasted"
                        app:layout_constraintTop_toTopOf="@+id/TIL_unskilled" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TIL_unskilled"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:hint="UnSkilled Worker"

                        android:textColorHint="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/TIL_skilled">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextinputET_unskilled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:digits="0123456789"

                            android:ellipsize="end" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/Accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUGGEST"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/TIL_unskilled"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/TIL_unskilled" />



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView3">

              <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <TextView
                      android:id="@+id/outputssz"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />


                  <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Recommended Workers"
                      android:textColor="@color/light_blue"
                      android:textSize="29dp"/>
                  <ProgressBar
                      android:id="@+id/progressBar"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:visibility="invisible" />
                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/recyclerView"
                      android:layout_width="match_parent"
                      android:layout_height="400dp" />
                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/recyclerView2"
                      android:layout_width="match_parent"
                      android:layout_height="400dp" />
              </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</LinearLayout>