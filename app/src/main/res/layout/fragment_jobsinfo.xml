<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.jobsinfo">

    <TextView
        android:id="@+id/textView_jobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/hello_blank_fragment"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jobID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JobID"
        app:layout_constraintEnd_toEndOf="@+id/textView_jobTitle"
        app:layout_constraintStart_toStartOf="@+id/textView_jobTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView_jobTitle" />

    <TextView
        android:id="@+id/tv_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tae"
        app:layout_constraintEnd_toEndOf="@+id/tv_jobID"
        app:layout_constraintStart_toStartOf="@+id/tv_jobID"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobID" />


</androidx.constraintlayout.widget.ConstraintLayout>