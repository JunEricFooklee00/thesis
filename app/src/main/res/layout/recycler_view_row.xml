<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"

        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/textView_jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Job Title"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Location"
                app:layout_constraintStart_toStartOf="@+id/textView_startingDate"
                app:layout_constraintTop_toBottomOf="@+id/textView_startingDate" />

            <TextView
                android:id="@+id/textView_startingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Starting Date"
                app:layout_constraintStart_toStartOf="@+id/textview_id"
                app:layout_constraintTop_toBottomOf="@+id/textview_id" />

            <TextView
                android:id="@+id/textView_expectedFinishDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Finish Date"
                app:layout_constraintStart_toStartOf="@+id/textView_location"
                app:layout_constraintTop_toBottomOf="@+id/textView_location" />

            <TextView
                android:id="@+id/textView_scopeofwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Scope_of_work"
                app:layout_constraintStart_toStartOf="@+id/textView_jobTitle"
                app:layout_constraintTop_toBottomOf="@+id/textView_jobTitle" />

            <TextView
                android:id="@+id/textview_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"

                android:text="id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/area"
                app:layout_constraintStart_toStartOf="@+id/textView_scopeofwork"
                app:layout_constraintTop_toBottomOf="@+id/textView_scopeofwork" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>